{
  "name": "@contactlab/appy",
  "version": "1.4.0",
  "description": "Fetch API the Contactlab way",
  "main": "lib/index.js",
  "module": "lib/es6/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "keywords": [
    "contactlab",
    "clab",
    "appy",
    "fetch",
    "fp",
    "fp-ts",
    "functional programming",
    "task"
  ],
  "engines": {
    "node": ">= 8.10 <11.0",
    "npm": ">= 6.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint && npm run check",
    "test": "npm run jest",
    "prebuild": "rimraf ./lib",
    "build": "tsc -p ./tsconfig-compile.json && tsc -p ./tsconfig-compile-es6.json",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "fp-ts": "^1.19.0",
    "io-ts": "^1.8.0"
  },
  "devDependencies": {
    "@contactlab/tslint-config": "1.3.0",
    "@types/jest": "24.0.16",
    "@types/node": "^12.0.0",
    "husky": "3.0.1",
    "jest": "24.8.0",
    "jest-fetch-mock": "2.1.2",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/_helpers/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/test/"
    ],
    "testRegex": "(\\.|/)spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "preset": "ts-jest",
    "testMatch": null
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
