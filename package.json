{
  "name": "@contactlab/appy",
  "version": "3.0.0-0",
  "description": "A functional wrapper around Fetch API",
  "main": "lib/index.js",
  "module": "lib/es6/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "keywords": [
    "contactlab",
    "appy",
    "fetch",
    "fp",
    "fp-ts",
    "typescript"
  ],
  "engines": {
    "node": ">= 8.10 <13.0",
    "npm": ">= 6.0"
  },
  "files": [
    "lib",
    "es6"
  ],
  "scripts": {
    "check": "tsc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint && npm run check",
    "test": "npm run jest",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json && tsc -p ./tsconfig.build-es6.json",
    "prepublishOnly": "npm test && npm run build",
    "docs": "docs-ts",
    "docs:update": "npm run docs && git add docs",
    "postdocs": "ts-node scripts/docs-index"
  },
  "peerDependencies": {
    "fp-ts": "^2.0.5"
  },
  "devDependencies": {
    "@babel/register": "^7.8.3",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^25.1.1",
    "@types/node": "^12.12.25",
    "babel-plugin-istanbul": "^6.0.0",
    "cross-fetch": "^3.0.4",
    "docs-ts": "^0.3.4",
    "eslint": "^6.8.0",
    "eslint-config-contactlab": "^4.2.2",
    "eslint-config-prettier": "^6.10.0",
    "fetch-mock": "^8.3.2",
    "fp-ts": "^2.0.5",
    "husky": "^4.2.1",
    "io-ts": "^2.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.2.2"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/_setup.ts",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/test/"
    ],
    "testRegex": "(\\.|/)spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "preset": "ts-jest",
    "testMatch": null,
    "setupFiles": [
      "<rootDir>/test/_setup.ts"
    ]
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs:update && pretty-quick --staged"
    }
  }
}
