{
  "name": "@contactlab/appy",
  "version": "1.0.0-rc2",
  "description": "Fetch API the Contactlab way",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "engines": {
    "node": ">= 8.10",
    "npm": ">= 6.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "precommit": "pretty-quick --staged",
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint",
    "test": "npm run jest",
    "prebuild": "rimraf ./lib",
    "build": "tsc -p ./tsconfig-compile.json",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "fp-ts": "1.7.1",
    "io-ts": "1.2.0"
  },
  "devDependencies": {
    "@contactlab/tslint-config": "1.0.0",
    "@types/jest": "23.1.5",
    "@types/node": "10.5.2",
    "husky": "0.14.3",
    "jest": "23.4.0",
    "jest-fetch-mock": "1.6.5",
    "prettier": "1.13.7",
    "pretty-quick": "1.6.0",
    "rimraf": "2.6.2",
    "ts-jest": "23.0.0",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/_helpers/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/test/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  }
}
