{
  "name": "@contactlab/appy",
  "version": "2.0.1",
  "description": "Fetch API the Contactlab way",
  "main": "lib/index.js",
  "module": "lib/es6/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "keywords": [
    "contactlab",
    "clab",
    "appy",
    "fetch",
    "fp",
    "fp-ts",
    "functional programming",
    "task"
  ],
  "engines": {
    "node": ">= 8.10 <11.0",
    "npm": ">= 6.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint && npm run check",
    "test": "npm run jest",
    "prebuild": "rimraf ./lib",
    "build": "tsc -p ./tsconfig.build.json && tsc -p ./tsconfig.build-es6.json",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "fp-ts": "^2.0.5",
    "io-ts": "^2.0.1"
  },
  "devDependencies": {
    "@babel/register": "7.6.2",
    "@contactlab/tslint-config": "1.3.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.8",
    "babel-plugin-istanbul": "5.2.0",
    "husky": "3.0.7",
    "isomorphic-fetch": "2.2.1",
    "jest": "24.9.0",
    "jest-fetch-mock": "2.1.2",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.3"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test/_helpers/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/src/test/"
    ],
    "testRegex": "(\\.|/)spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "preset": "ts-jest",
    "testMatch": null
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
