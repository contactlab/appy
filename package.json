{
  "name": "@contactlab/appy",
  "version": "1.2.2",
  "description": "Fetch API the Contactlab way",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "Contactlab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/contactlab/appy#readme",
  "bugs": "https://github.com/contactlab/appy/issues",
  "repository": "contactlab/appy",
  "keywords": [
    "contactlab",
    "clab",
    "appy",
    "fetch",
    "fp",
    "fp-ts",
    "functional programming",
    "task"
  ],
  "engines": {
    "node": ">= 8.10",
    "npm": ">= 6.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint",
    "test": "npm run jest",
    "prebuild": "rimraf ./lib",
    "build": "tsc -p ./tsconfig-compile.json",
    "prepublishOnly": "npm test && npm run build",
    "changelog": "standard-changelog -i CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "npm run changelog"
  },
  "dependencies": {
    "fp-ts": "1.10.0",
    "io-ts": "1.4.0"
  },
  "devDependencies": {
    "@contactlab/tslint-config": "1.2.0",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.2",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "jest-fetch-mock": "2.0.1",
    "prettier": "1.14.3",
    "pretty-quick": "1.8.0",
    "rimraf": "2.6.2",
    "standard-changelog": "2.0.6",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typescript": "3.1.6"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/_helpers/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/test/"
    ],
    "testRegex": "(\\.|/)spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "preset": "ts-jest",
    "testMatch": null
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
